pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo "Building project..."
            }
        }

        stage('Deploy') {
            steps {
                echo "Running deploy script..."
                sh 'sh deploy.sh'
            }
        }

        stage('Test') {
            steps {
                echo "Running tests..."
            }
        }
    }
}
